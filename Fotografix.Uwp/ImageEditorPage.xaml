<Page
    x:Class="Fotografix.Uwp.ImageEditorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:c="using:Fotografix"
    xmlns:et="using:Fotografix.Editor.Tools"
    xmlns:ui="using:Fotografix.Uwp"
    xmlns:layers="using:Fotografix.Uwp.Layers"
    xmlns:tools="using:Fotografix.Uwp.Tools"
    xmlns:sys="using:System"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource AppBarBackgroundThemeBrush}"
    AllowDrop="True">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <ui:GeometryResourceConverter x:Key="ToolIconConverter" KeySuffix="Icon" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="48" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" BorderThickness="0,1" BorderBrush="{ThemeResource ButtonBorderThemeBrush}" Background="{ThemeResource SystemChromeLowColor}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="6,0" Orientation="Horizontal">
                <muxc:DropDownButton
                    Style="{StaticResource CommandDropDownButtonStyle}"
                    ToolTipService.ToolTip="Save">
                    <SymbolIcon Symbol="Save" />

                    <muxc:DropDownButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="Save" Command="{x:Bind editor.SaveCommand}">
                                <MenuFlyoutItem.KeyboardAccelerators>
                                    <KeyboardAccelerator Modifiers="Control" Key="S" />
                                </MenuFlyoutItem.KeyboardAccelerators>
                            </MenuFlyoutItem>

                            <MenuFlyoutItem Text="Save as..." Command="{x:Bind editor.SaveAsCommand}">
                                <MenuFlyoutItem.KeyboardAccelerators>
                                    <KeyboardAccelerator Modifiers="Control,Shift" Key="S" />
                                </MenuFlyoutItem.KeyboardAccelerators>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </muxc:DropDownButton.Flyout>
                </muxc:DropDownButton>

                <Button Style="{StaticResource CommandButtonStyle}"
                        Command="{x:Bind editor.PasteCommand}"
                        ToolTipService.ToolTip="Paste">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="V" />
                    </Button.KeyboardAccelerators>

                    <SymbolIcon Symbol="Paste" />
                </Button>

                <Button Style="{StaticResource CommandButtonStyle}"
                        Command="{x:Bind editor.UndoCommand}"
                        ToolTipService.ToolTip="Undo">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="Z" />
                    </Button.KeyboardAccelerators>

                    <SymbolIcon Symbol="Undo" />
                </Button>

                <Button Style="{StaticResource CommandButtonStyle}"
                        Command="{x:Bind editor.RedoCommand}"
                        ToolTipService.ToolTip="Redo">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control,Shift" Key="Z" />
                        <KeyboardAccelerator Modifiers="Control" Key="Y" />
                    </Button.KeyboardAccelerators>

                    <SymbolIcon Symbol="Redo" />
                </Button>
            </StackPanel>

            <Grid Grid.Column="1"
                  Margin="2,4"
                  Padding="8,2"
                  CornerRadius="4"
                  Background="{ThemeResource SystemChromeMediumColor}">
                <Grid.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.MergedDictionaries>
                            <tools:ToolTemplatesResourceDictionary />
                        </ResourceDictionary.MergedDictionaries>
                    </ResourceDictionary>
                </Grid.Resources>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Margin="0,1,0,0"
                           Padding="0,6"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Text="{x:Bind editor.ActiveTool.Name, Mode=OneWay}" />

                <ContentControl Grid.Column="1"
                                Margin="8,0"
                                Padding="0"
                                VerticalAlignment="Center"
                                ContentTemplateSelector="{StaticResource ToolControlsTemplateSelector}"
                                Content="{x:Bind editor.ActiveTool, Mode=OneWay}" />
            </Grid>

            <StackPanel Grid.Column="2" Padding="6,0" Orientation="Horizontal">
                <Button Click="ResizeImage_Click" Style="{StaticResource CommandButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Symbol="FullScreen" />
                        <TextBlock Margin="4,0,0,0" HorizontalTextAlignment="Center" MinWidth="80" Text="{x:Bind FormatSize(editor.Size), Mode=OneWay}" />
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource CommandButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Symbol="Zoom" />
                        <TextBlock Margin="4,0,0,0" HorizontalTextAlignment="Center" MinWidth="40" Text="{x:Bind sys:String.Format('{0:P0}', editor.ZoomFactor), Mode=OneWay}" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <ListView Grid.Row="1" Grid.Column="0"
                  ItemsSource="{x:Bind editor.Tools}"
                  SelectedItem="{x:Bind editor.ActiveTool, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="et:ITool">
                    <PathIcon
                        Data="{x:Bind Name, Converter={StaticResource ToolIconConverter}}"
                        ToolTipService.ToolTip="{x:Bind Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <canvas:CanvasControl
            x:Name="canvas"
            Grid.Row="1" Grid.Column="1"
            PointerEntered="{x:Bind toolAdapter.PointerEntered}"
            PointerPressed="{x:Bind toolAdapter.PointerPressed}"
            PointerMoved="{x:Bind toolAdapter.PointerMoved}"
            PointerReleased="{x:Bind toolAdapter.PointerReleased}"
            PointerExited="{x:Bind toolAdapter.PointerExited}"
            SizeChanged="Canvas_SizeChanged"
            CreateResources="Canvas_CreateResources"
            Draw="Canvas_Draw" 
        />

        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Vertical" Background="{ThemeResource AppBarBackgroundThemeBrush}" Padding="8" BorderThickness="1,0,0,0" BorderBrush="{ThemeResource ButtonBorderThemeBrush}">
            <StackPanel.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <layers:LayerTemplatesResourceDictionary />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </StackPanel.Resources>

            <Grid Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Margin="0,4,0,0" Style="{StaticResource PanelTitleTextBlockStyle}" Text="Layers" />

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource CommandButtonStyle}"
                            ToolTipService.ToolTip="New layer"
                            Command="{x:Bind editor.NewLayerCommand}">
                        <SymbolIcon Symbol="Add" />
                    </Button>

                    <Button x:Name="newAdjustmentButton"
                            Style="{StaticResource CommandButtonStyle}"
                            ToolTipService.ToolTip="Adjustments"
                            Flyout="{StaticResource NewAdjustmentMenuFlyout}">
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE706;"/>
                    </Button>

                    <Button Style="{StaticResource CommandButtonStyle}"
                            Command="{x:Bind editor.ImportLayerCommand}"
                            ToolTipService.ToolTip="Import">
                        <SymbolIcon Symbol="Import" />
                    </Button>

                    <Button Style="{StaticResource CommandButtonStyle}"
                            ToolTipService.ToolTip="Delete"
                            Command="{x:Bind editor.DeleteLayerCommand}">
                        <SymbolIcon Symbol="Delete" />
                    </Button>
                </StackPanel>
            </Grid>

            <ListView ItemsSource="{x:Bind editor.Layers}" SelectedItem="{x:Bind editor.ActiveLayer, Mode=TwoWay}"
                      CanReorderItems="True" AllowDrop="True">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="c:Layer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <CheckBox Grid.Column="0" MinWidth="0" IsChecked="{x:Bind Visible, Mode=TwoWay}" />
                            <TextBlock Grid.Column="1" VerticalAlignment="Center" Text="{x:Bind Name, Mode=OneWay}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Border Margin="0,16,0,0" Background="{ThemeResource NavigationViewExpandedPaneBackground}">
                <ContentControl
                    Padding="6"
                    HorizontalContentAlignment="Stretch"
                    ContentTemplate="{StaticResource LayerPropertiesTemplate}"
                    Content="{x:Bind editor.ActiveLayer, Mode=OneWay}" />
            </Border>
        </StackPanel>
    </Grid>
</Page>
