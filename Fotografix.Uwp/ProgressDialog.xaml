<ContentDialog
    x:Class="Fotografix.Uwp.ProgressDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:local="using:Fotografix.Uwp"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    CloseButtonText="Cancel"
    CloseButtonClick="{x:Bind vm.Cancel}"
    Closing="ContentDialog_Closing">

    <ContentDialog.Resources>
        <Style TargetType="local:ProgressDialog" BasedOn="{StaticResource DefaultContentDialogStyle}"/>
    </ContentDialog.Resources>

    <StackPanel Margin="0,12">
        <TextBlock Text="{x:Bind vm.Description, Mode=OneWay}" />
        <winui:ProgressBar Margin="0,12"
                        IsIndeterminate="{x:Bind vm.IsIndeterminate, Mode=OneWay}"
                        Value="{x:Bind vm.CompletedItems, Mode=OneWay}"
                        Maximum="{x:Bind vm.TotalItems, Mode=OneWay}" />
    </StackPanel>
</ContentDialog>
