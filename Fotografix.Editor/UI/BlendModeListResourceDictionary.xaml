<ResourceDictionary
    x:Class="Fotografix.Editor.UI.BlendModeListResourceDictionary"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:eui="using:Fotografix.Editor.UI">

    <DataTemplate x:Key="BlendModeTemplate" x:DataType="eui:BlendModeListItem">
        <TextBlock Text="{x:Bind Name}" />
    </DataTemplate>

    <DataTemplate x:Key="SeparatorTemplate">
        <Rectangle Margin="0,0,0,-2" Height="1" Fill="{ThemeResource MenuFlyoutSeparatorThemeBrush}" />
    </DataTemplate>

    <eui:BlendModeListItemTemplateSelector x:Key="BlendModeListItemTemplateSelector"
                                           BlendModeTemplate="{StaticResource BlendModeTemplate}"
                                           SeparatorTemplate="{StaticResource SeparatorTemplate}" />

    <Style x:Key="SeparatorStyle" TargetType="ComboBoxItem">
        <Setter Property="IsEnabled" Value="False" />
    </Style>

    <eui:BlendModeListItemStyleSelector x:Key="BlendModeListItemStyleSelector" SeparatorStyle="{StaticResource SeparatorStyle}" />
</ResourceDictionary>
